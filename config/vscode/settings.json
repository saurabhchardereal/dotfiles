{
  //=========================================================================
  //  THEMING
  //=========================================================================
  "oneDarkPro.editorTheme": "One Dark Pro Darker",
  "workbench.colorTheme": "Catppuccin",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorCustomizations": {
    "[One Dark Pro Darker]": {
      "activityBar.background": "#0d1117",
      "editor.background": "#0d1117",
      "sideBar.background": "#0d1117",
      "sideBar.border": "#282c34",
      "tab.activeBackground": "#0d1117",
      "terminal.background": "#0d1117"
    }
  },

  //=========================================================================
  // LANGUAGE SPECIFIC
  //=========================================================================

  /* html & css/sass */
  "css.lint.compatibleVendorPrefixes": "warning",
  "css.lint.duplicateProperties": "warning",
  "scss.lint.compatibleVendorPrefixes": "warning",
  "scss.lint.duplicateProperties": "warning",
  "html.format.wrapLineLength": 80,

  /* python */
  "python.formatting.provider": "black",
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,

  //=========================================================================
  // VIM
  //=========================================================================
  "vim.hlsearch": true,
  "vim.incsearch": true,
  "vim.ignorecase": true,
  "vim.smartcase": true,
  "vim.useCtrlKeys": false,
  "vim.searchHighlightColor": "yellow",
  "vim.leader": ",",
  "vim.handleKeys": {
    "<C-d>": false
  },

  // nnoremap mappings
  "vim.normalModeKeyBindingsNonRecursive": [
    /* show command palette */
    {
      "before": [":"],
      "commands": ["workbench.action.showCommands"]
    },

    /* enter vim mode */
    {
      "before": [";"],
      "after": [":"]
    },

    /* quick up by 5 lines  */
    {
      "before": ["J"],
      "after": ["5", "j", "z", "z"]
    },

    /* quick down by 5 lines  */
    {
      "before": ["K"],
      "after": ["5", "k", "z", "z"]
    },

    /* toggle highlight search  */
    {
      "before": ["<leader>", "s"],
      "commands": [":set hlsearch!"]
    },

    /* opens settings json  */
    {
      "before": ["<leader>", "e", "s"],
      "commands": ["workbench.action.openSettingsJson"]
    },

    /* format code */
    {
      "before": ["<leader>", "f"],
      "commands": ["editor.action.format"]
    },

    /* show doc/info */
    {
      "before": ["D"],
      "commands": ["editor.action.showHover"]
    },

    /* rename symbol */
    {
      "before": ["<leader>", "r", "n"],
      "commands": ["editor.action.rename"]
    },

    /* match my vim buffer movement */
    {
      "before": ["<leader>", "n"],
      "commands": ["workbench.action.nextEditorInGroup"]
    }
  ],

  // xnoremap mappings
  "vim.visualModeKeyBindingsNonRecursive": [
    /* show command palette */
    {
      "before": [":"],
      "commands": ["workbench.action.showCommands"]
    },

    /* enter vim mode */
    {
      "before": [";"],
      "after": [":"]
    },

    /* wrapping text with emmet tags */
    {
      "before": ["<leader>", "s"],
      "commands": ["editor.emmet.action.wrapWithAbbreviation"]
    }
  ],

  //=========================================================================
  // VSCODE
  //=========================================================================
  "editor.codeLensFontSize": 20,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.fontFamily": "Hack Nerd Font Mono",
  "editor.fontSize": 15,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.minimap.enabled": false,
  "editor.renderWhitespace": "none",
  "editor.rulers": [80],
  "editor.smoothScrolling": true,
  "editor.wordWrap": "off",
  "explorer.confirmDelete": true,
  "keyboard.dispatch": "keyCode",
  "redhat.telemetry.enabled": false,
  "telemetry.telemetryLevel": "off",
  "window.zoomLevel": 1,
  "workbench.startupEditor": "none"

  // vim: ft=jsonc
}
